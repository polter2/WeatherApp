<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/textView" android:textColor="@color/textColor"
            android:textAlignment="center"
            android:layout_marginTop="50sp"
            android:textSize="34sp" android:fontFamily="@font/montserrat_bold"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:layout_below="@id/textView"
            android:layout_marginTop="100sp"
            android:layout_marginHorizontal="50sp"
            android:hint="@string/hint_user_field"
            android:textColorHint="@color/textColorhint"
            android:backgroundTint="@color/colorAccent"
            android:id="@+id/user_field" android:minHeight="48dp"/>
    
    <Button
            android:id="@+id/main_btn"
            android:fontFamily="@font/montserrat_bold"
            android:layout_below="@+id/user_field"
            android:layout_marginTop="20sp"
            android:layout_marginHorizontal="130sp"
            android:backgroundTint="@color/colorAccent"
            android:text="@string/main_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:text="@string/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result_info"
            android:layout_below="@+id/main_btn"
            android:textColor="@color/textColor"
            android:textAlignment="center"
            android:layout_marginTop="50sp"
            android:textSize="25sp" android:fontFamily="@font/montserrat_bold"/>


    <TextView
            android:text="Conditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/conditions_info"
            android:layout_below="@+id/result_info"
            android:textColor="@color/textColor"
            android:textAlignment="center"
            android:layout_marginTop="50sp"
            android:textSize="25sp" android:fontFamily="@font/montserrat_bold"/>


</RelativeLayout>